@model RegisterViewModel
@{
    Layout = "../Shared/_Register.cshtml";
}

<div class="login-page">
    <div class="row justify-content-center">
        <div class="col-md-3"></div>
        <div class="login-box col-xl-6 col-lg-6 col-md-6">
            <div class="page-header">
                <h1>Register</h1>
            </div>
            <form asp-controller="Account" asp-action="Register" method="POST" class="form-login">
                <input type="hidden" asp-for="ReturnUrl" />
                <div class="form-group">
                    <Label asp-for="Username" >Username</Label>
                    <input asp-for="Username" class="form-control" autofocus>
                    <span asp-validation-for="Username"></span>
                </div>
                <div class="form-group">
                    <Label asp-for="Displayname" >Display name</Label>
                    <input asp-for="Displayname" class="form-control" autofocus>
                    <span asp-validation-for="Displayname"></span>
                </div>
                <div class="form-group">
                    <Label asp-for="Password" >Password</Label>
                    <input asp-for="Password" class="form-control">
                    <span asp-validation-for="Password"></span>
                </div>
                <div class="form-group">
                    <Label asp-for="ConfirmPassword" >Confirm Password</Label>
                    <input asp-for="ConfirmPassword" class="form-control">
                    <span asp-validation-for="ConfirmPassword"></span>
                </div>
                <div class="form-group">
                    <Label asp-for="Email" >Email</Label>
                    <input asp-for="Email" class="form-control">
                    <span asp-validation-for="Email"></span>
                </div>
                <div class="form-group">
                    <button class="btn btn-success " type="submit">Sign up</button>
                </div>
                <div class="form-group">
                    <a asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl">Back to login</a>
                </div>
            </form>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>